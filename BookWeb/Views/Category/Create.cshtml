@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pd-2">
            <h3 class="text-primary"> Create Category</h3>
            <hr/>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row ">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"> </span>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"> </span>
        </div>
        <div class="row justify-content-center align-items-center" style="margin: 20px; margin-left:-30px;">
            <div class="col-6 col-md-3 p-0">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-danger form-control">
                    Back to List
                </a>
            </div>
        </div>


             
    </div>
</form>

   @section Scripts{
       @{
           <partial name="_ValidationScriptsPartial" />
       }
   }